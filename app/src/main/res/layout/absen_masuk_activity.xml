<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".AbsenMasuk">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username / Nik" />

    <EditText
        android:hint="Username / Nik"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextNik" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password" />

    <EditText
        android:hint="Password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"

        android:id="@+id/editTextPassword" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lokasi Absen" />

    <Spinner
        android:id="@+id/lokasiAbsen"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:prompt="@string/lokasi_absen"
        android:paddingBottom="20dp"/>


        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Latitude Saat ini : " />

        <TextView
            android:id="@+id/latitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />


        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Longitude Saat ini : " />

        <TextView
            android:id="@+id/longitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
          />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jarak Ke Lokasi Absen (meter) : " />

    <TextView
        android:id="@+id/jarakKeLokasi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ABSEN MASUK"
        android:id="@+id/buttonMasuk" />



</LinearLayout>